<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_section_e"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="edu.aku.hassannaqvi.cbtfollowup.activities.SectionEActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:text="@string/section_E"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:typeface="serif" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/fpe001" />

            <RadioGroup
                android:id="@+id/fpe001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/fpe00101"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/fpe00102"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/fpeGrp001a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/fpe001a" />

                <EditText
                android:id="@+id/fpe001a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe001a01"
                android:inputType="number"
                android:maxLength="4" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fpeGrp001b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/fpe001b" />

                <EditText
                android:id="@+id/fpe001b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe001b01"
                android:inputType="number"
                android:maxLength="2" />

            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/fpe002" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efefef"
                android:padding="2dp"
                android:text="@string/fpesub"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/fpe00201"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fpe00201" />

            <EditText
                android:id="@+id/fpe00201x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe002amt"
                android:inputType="number"
                android:maxLength="4"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/fpe00202"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fpe00202" />

            <EditText
                android:id="@+id/fpe00202x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe002amt"
                android:inputType="number"
                android:maxLength="4"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/fpe00203"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fpe00203" />

            <EditText
                android:id="@+id/fpe00203x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe002amt"
                android:inputType="number"
                android:maxLength="4"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/fpe00204"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fpe00204" />

            <EditText
                android:id="@+id/fpe00204x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe002amt"
                android:inputType="number"
                android:maxLength="4"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/fpe00205"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fpe00205" />

            <EditText
                android:id="@+id/fpe00205x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe002amt"
                android:inputType="number"
                android:maxLength="4"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/fpe00288"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other" />

            <EditText
                android:id="@+id/fpe00288x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fpe002amt"
                android:inputType="number"
                android:maxLength="4"
                android:visibility="gone" />


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->

            <LinearLayout
                android:id="@+id/fldGrpbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="32dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:onClick="submitSecA"
                    android:text="@string/next_section"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:onClick="endForm"
                    android:text="@string/end_interview"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <!--'onClick' for btn_Continue will call next section form e.g.: openSection2-->

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

