                </RadioGroup>


                <TextView
                    style="@style/TextView"
                    android:text="@string/fpj03s" />

                <RadioGroup
                    android:id="@+id/fpj05s"
                    style="@style/RadioGroup">

                    <RadioButton
                        android:id="@+id/fpj05sa"
                        style="@style/RadioButton"
                        android:text="@string/fpj05sa" />

                    <RadioButton
                        android:id="@+id/fpj05sb"
                        style="@style/RadioButton"
                        android:text="@string/fpj05sb" />

                </RadioGroup>


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <!-- Radio Buttons fpj05 Ends -->

        <!-- Radio Buttons fpj06 Starts -->
        <android.support.v7.widget.CardView
            android:id="@+id/cvfpj06"
            style="@style/Q_CardView">

            <LinearLayout style="@style/Q_Linerlayout_new">

                <TextView
                    style="@style/TextView"
                    android:text="@string/fpj06" />

                <RadioGroup
                    android:id="@+id/fpj06"
                    style="@style/RadioGroup">

                    <RadioButton
                        android:id="@+id/fpj06a"
                        style="@style/RadioButton"
                        android:text="@string/fpj06a" />

                    <RadioButton
                        android:id="@+id/fpj06b"
                        style="@style/RadioButton"
                        android:text="@string/fpj06b" />

                    <RadioButton
                        android:id="@+id/fpj0698"
