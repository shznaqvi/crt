                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <!-- Radio Buttons fpj06 Ends -->

        <!-- Radio Buttons fpj07 Starts -->
        <android.support.v7.widget.CardView
            android:id="@+id/cvfpj07"
            style="@style/Q_CardView">

            <LinearLayout style="@style/Q_Linerlayout_new">

                <TextView
                    style="@style/TextView"
                    android:text="@string/fpj07" />

                <RadioGroup
                    android:id="@+id/fpj07"
                    style="@style/RadioGroup">

                    <RadioButton
