<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_section_j"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.aku.hassannaqvi.cbtfollowup.activities.SectionJActivity">

    <LinearLayout
        android:layoutDirection="rtl"
        android:id="@+id/llJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:text="@string/fpjh"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:typeface="serif" />

        <!-- Radio Buttons fpj01 Starts -->
        <android.support.v7.widget.CardView
            android:id="@+id/cvfpj01"
            style="@style/Q_CardView">

            <LinearLayout style="@style/Q_Linerlayout_new">

                <TextView
                    style="@style/TextView"
                    android:text="@string/fpj01" />

                <RadioGroup
                    android:id="@+id/fpj01"
                    style="@style/RadioGroup">

                    <RadioButton
                        android:id="@+id/fpj01a"
                        style="@style/RadioButton"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/fpj01b"
                        style="@style/RadioButton"
                        android:text="@string/no" />

                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <!-- Radio Buttons fpj01 Ends -->

        <!-- Radio Buttons fpj02 Starts -->
        <android.support.v7.widget.CardView
            android:id="@+id/cvfpj02"
            style="@style/Q_CardView">

            <LinearLayout style="@style/Q_Linerlayout_new">

                <TextView
                    style="@style/TextView"
                    android:text="@string/fpj02" />

                <RadioGroup
                    android:id="@+id/fpj02"
                    style="@style/RadioGroup">

                    <RadioButton
                        android:id="@+id/fpj02a"
                        style="@style/RadioButton"
                        android:text="@string/fpj02a" />

                    <RadioButton
                        android:id="@+id/fpj02b"
                        style="@style/RadioButton"
                        android:text="@string/fpj02b" />

                    <RadioButton
                        android:id="@+id/fpj02c"
                        style="@style/RadioButton"
                        android:text="@string/fpj02c" />

                    <RadioButton
                        android:id="@+id/fpj02d"
                        style="@style/RadioButton"
                        android:text="@string/fpj02d" />

                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <!-- Radio Buttons fpj02 Ends -->

        <!-- Radio Buttons fpj03 Starts -->
        <android.support.v7.widget.CardView
            android:id="@+id/cvfpj03"
            style="@style/Q_CardView">

            <LinearLayout style="@style/Q_Linerlayout_new">

                <TextView
                    style="@style/TextView"
                    android:text="@string/fpj03" />

                <RadioGroup
                    android:id="@+id/fpj03r"
                    style="@style/RadioGroup">

                    <RadioButton
                        android:id="@+id/fpj03ra"
                        style="@style/RadioButton"
                        android:text="@string/fpj03ra" />

                    <RadioButton
                        android:id="@+id/fpj03rb"
                        style="@style/RadioButton"
                        android:text="@string/fpj03rb" />

                </RadioGroup>


                <TextView
                    style="@style/TextView"
                    android:text="@string/fpj03s" />

                <RadioGroup
                    android:id="@+id/fpj03s"
                    style="@style/RadioGroup">

                    <RadioButton
                        android:id="@+id/fpj03sa"
                        style="@style/RadioButton"
                        android:text="@string/fpj05sa" />

                    <RadioButton
                        android:id="@+id/fpj03sb"
                        style="@style/RadioButton"
                        android:text="@string/fpj05sb" />

                </RadioGroup>


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <!-- Radio Buttons fpj03 Ends -->

        <!-- Radio Buttons fpj04 Starts -->
